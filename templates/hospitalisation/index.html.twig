{% extends 'base.html.twig' %}

{% block title %}Hospitalisation index{% endblock %}

{% block body %}
    <h1>Listes Hospitalisations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Patient</th>
                <th>DateEntree</th>
                <th>DateSortie</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hospitalisation in hospitalisations %}
            <tr>
                <td>{{ hospitalisation.id }}</td>
                <td>{{ hospitalisation.patient }}</td>
                <td>{{ hospitalisation.dateEntree ? hospitalisation.dateEntree|date('Y-m-d') : '' }}</td>
                <td>{{ hospitalisation.dateSortie ? hospitalisation.dateSortie|date('Y-m-d') : '' }}</td>
                <td>{{ hospitalisation.statut ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn  btn-info mt-b" href="{{ path('app_hospitalisation_show', {'id': hospitalisation.id}) }}">show</a>
                    <a class="btn  btn-primary mt-b" href="{{ path('app_hospitalisation_edit', {'id': hospitalisation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary mt-b" href="{{ path('app_hospitalisation_new') }}">Create new</a>
{% endblock %}

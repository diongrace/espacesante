{% extends 'base.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <h1>Chambre hospitalier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomChambre</th>
                <th>NumeroChambre</th>
                <th>NombreLits</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.nomChambre }}</td>
                <td>{{ chambre.numeroChambre }}</td>
                <td>{{ chambre.nombreLits }}</td>
                <td>
                    <a class="btn btn-info mt-b" href="{{ path('app_chambre_show', {'id': chambre.id}) }}">show</a>
                    <a class="btn btn-primary mt-b" href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary mt-b" href="{{ path('app_chambre_new') }}">Create new</a>
{% endblock %}
